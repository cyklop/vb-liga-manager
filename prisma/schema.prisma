generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Team {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String
  isAdmin   Boolean @default(false)
  isSuperAdmin Boolean @default(false)
  teamId    Int?
  team      Team?   @relation(fields: [teamId], references: [id])
}
